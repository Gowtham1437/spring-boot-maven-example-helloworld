                    sh 'kubectl --server=https://D19DD6CD7030D3B28FDEFCE4F3B1B36A.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token= "eyJhbGciOiJSUzI1NiIsImtpZCI6InlocFpKRl9heTY3T29QQ2F2aWRnUkttY1VoOEM5ZkxCMlJzMFVXUDdIbXMifQ..sDQ_Fw8KjHmD0BC8eeAoj5HMO_mN9RygyLMNG_vBX1inZYOPlMrgZ6q9EKzXN2pdmBaw78o8ZuiFZammyvldi3A2XSNxCdsrbRj8liNbj9OCZxgsFoQ1QCXtYve0FKIH9u98Ig-H8r23OjBpsI3KwLHdFUhjVGpD0JT3elbUYVEXJ3h9HUgjwW1VkGjVyshPctGliOM7lpKzkwLqka0ZvdoP4-fV5ZEGl5-0RZtps3NlXcUUP3KDrBg1pZKtSPTfzD4b6H4oxYY6BY3gEejRTjLJpCWSOaS_RHd1pgYGT0yXFtId-LwEXScBmitmuLWMcGdquowa0JwUVWT4LLCKg" apply -f service.yml'
                    
                    sh 'kubectl --server=https://D19DD6CD7030D3B28FDEFCE4F3B1B36A.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token= "eyJhbGciOiJSUzI1NiIsImtpZCI6InlocFpKRl9heTY3T29QQ2F2aWRnUkttY1VoOEM5ZkxCMlJzMFVXUDdIbXMifQ..sDQ_Fw8KjHmD0BC8eeAoj5HMO_mN9RygyLMNG_vBX1inZYOPlMrgZ6q9EKzXN2pdmBaw78o8ZuiFZammyvldi3A2XSNxCdsrbRj8liNbj9OCZxgsFoQ1QCXtYve0FKIH9u98Ig-H8r23OjBpsI3KwLHdFUhjVGpD0JT3elbUYVEXJ3h9HUgjwW1VkGjVyshPctGliOM7lpKzkwLqka0ZvdoP4-fV5ZEGl5-0RZtps3NlXcUUP3KDrBg1pZKtSPTfzD4b6H4oxYY6BY3gEejRTjLJpCWSOaS_RHd1pgYGT0yXFtId-LwEXScBmitmuLWMcGdquowa0JwUVWT4LLCKg" rollout restart deployment/java-app-deployment'
                 
