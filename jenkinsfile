pipeline{
    agent{
        node{
            label 'forproof'
        }
    }

    stages{
        stage ('checkout') {
            steps{
                git changelog: false, poll: false, url: 'https://github.com/Gowtham1437/spring-boot-maven-example-helloworld.git'
            }
        }    
        stage ('maven build') {
            steps{
                sh 'mvn clean package'
            }
        } 

        stage ('docker build & push'){
            steps{
                script {
                    withCredentials([string(credentialsId: 'token', variable: 'token')]) {
                        sh 'docker login -u bobby4me -p ${token}'
}
                }
                sh 'docker build . -t bobby4me/devops:v5'
                sh 'docker push bobby4me/devops:v5'
            }
       
        }
    stage ('menifest checkout') {
            steps{
                git changelog: false, poll: false, url: 'https://github.com/Gowtham1437/spring-boot-maven-example-helloworld.git'
            }
        }   
    stage ('k8s cicd') {
        steps{
            dir('menifests') {
                 sh 'kubectl --server=https://137B3E309EC079032348C2260F3D6A0F.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6Ilo0dmpXVmhoSFlJT0xibnRieVVpQ1lldEhiRDlYaDlxSDZkMncwSmZJWncifQ..cDeinDTmjeY0gNgGCbHSyzQ15IbU9OgjgbSJFm_o12cfuz76EORowavz1JCN0-wV1KPJ6QTIGh-v-xk8dTV25cPblCQv6lnHnsD9ZAeHBE9sTDJcyc9mHcO3j5SJ3Hv7hEY4KelNR4a_MWF4z32pnNVMLfPaROaloTI0nZxXMXJuzxBP-PE5uswBoT6RdwpItfeIBeMsj9lc1_-7KpoGSZ_S1bSR6otku05nXadUjjPTrF4r8gxm1L2jniykxb46Ju6tAwLZmOdbAwI1WIvAaMZh88XLszWNtyAmdBq1BryqOp0bM1ahJgF_yIyk3U8egHg8SqKUlZUVHV21m-3mHw" apply -f deployment.yml'

                    sh 'kubectl --server=https://137B3E309EC079032348C2260F3D6A0F.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6Ilo0dmpXVmhoSFlJT0xibnRieVVpQ1lldEhiRDlYaDlxSDZkMncwSmZJWncifQ..cDeinDTmjeY0gNgGCbHSyzQ15IbU9OgjgbSJFm_o12cfuz76EORowavz1JCN0-wV1KPJ6QTIGh-v-xk8dTV25cPblCQv6lnHnsD9ZAeHBE9sTDJcyc9mHcO3j5SJ3Hv7hEY4KelNR4a_MWF4z32pnNVMLfPaROaloTI0nZxXMXJuzxBP-PE5uswBoT6RdwpItfeIBeMsj9lc1_-7KpoGSZ_S1bSR6otku05nXadUjjPTrF4r8gxm1L2jniykxb46Ju6tAwLZmOdbAwI1WIvAaMZh88XLszWNtyAmdBq1BryqOp0bM1ahJgF_yIyk3U8egHg8SqKUlZUVHV21m-3mHw" apply -f service.yml'
                    
                    sh 'kubectl --server=https://137B3E309EC079032348C2260F3D6A0F.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6Ilo0dmpXVmhoSFlJT0xibnRieVVpQ1lldEhiRDlYaDlxSDZkMncwSmZJWncifQ..cDeinDTmjeY0gNgGCbHSyzQ15IbU9OgjgbSJFm_o12cfuz76EORowavz1JCN0-wV1KPJ6QTIGh-v-xk8dTV25cPblCQv6lnHnsD9ZAeHBE9sTDJcyc9mHcO3j5SJ3Hv7hEY4KelNR4a_MWF4z32pnNVMLfPaROaloTI0nZxXMXJuzxBP-PE5uswBoT6RdwpItfeIBeMsj9lc1_-7KpoGSZ_S1bSR6otku05nXadUjjPTrF4r8gxm1L2jniykxb46Ju6tAwLZmOdbAwI1WIvAaMZh88XLszWNtyAmdBq1BryqOp0bM1ahJgF_yIyk3U8egHg8SqKUlZUVHV21m-3mHw" rollout restart deployment/java-app-deployment'
                    
